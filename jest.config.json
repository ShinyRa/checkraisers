{
	"testEnvironment": "jsdom",
	"transform": {
		"^.+\\.svelte$": [
			"svelte-jester",
			{
				"preprocess": true
			}
		],
		"^.+\\.ts$": "ts-jest",
		"^.+\\.js$": "babel-jest"
	},
	"moduleFileExtensions": ["js", "ts", "svelte"],
	"moduleDirectories": ["node_modules", "frontend", "backend"],
	"moduleNameMapper": { "^\\$lib/(.*)": "<rootDir>/backend/$1" }
}
